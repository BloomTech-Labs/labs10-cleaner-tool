{
  "name": "labs9-cleaner-pos",
  "version": "1.0.0",
  "scripts": {
    "test": "npm run test:precommit --prefix frontend && npm test --prefix backend",
    "postinstall": "npm install --prefix backend && npm run build --prefix backend"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "lint-staged": {
    "frontend/src/**/*.tsx": [
      "prettier --write"
    ],
    "backend/src/**/*.ts": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  }
}
